 </head>
    <body>
    <div id="placeholder" style="width:800px;height:600px;"></div>

<script id="source">
$(function () {
<% require 'json'
   
   r = JSON.parse(@result)['facets']['histo1']['entries'].collect { |h|
     [h['time'], h['count']]
   }
%>
    var d = <%= r %>

    $.plot($("#placeholder"), [d], { xaxis: { mode: "time" }, zoom: { interactive: true}, pan: {interactive: true} });
});
</script>

